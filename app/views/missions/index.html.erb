<div class="container">
    <h1><b><%= t 'target.index.target' %></b></h1>
    <a href='http://localhost:3000/missions/new' class="btn btn-primary pull-right"><%= t 'button.newtar'%></a>
    <a href='http://localhost:3000' class="btn btn-success"><%= t 'button.back'%></a>
</div>
<br>
<div class="table-wrapper-scroll-y my-custom-scrollbar" style="height: 525px;overflow: scroll;">
<table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0"
  width="100%">
      <caption>List of Targets</caption>
      <thead>
        <tr>
    <th><%= t 'target.index.id' %></th>
    <th><%= t 'target.index.title' %></th>
    <th><%= t 'target.index.description' %></th>
    <th><%= t 'target.index.start' %></th>
    <th><%= t 'target.index.finish' %></th>
    <th><%= t 'target.index.team' %></th>
    <th><%= t 'target.index.status' %></th>
    <th><%= t 'users.index.Show Individual' %></th>
  </tr>
  
      </thead>
      <tbody>
  <%@missions = Mission.all %>
  <% @missions.each do |mission| %>
  <tr>
    <td><%= mission.id %></td>
    <td><%= mission.title %></td>
    <td><%= mission.description %></td>
    <td><%= mission.startDate %></td>
    <td><%= mission.finishDate %></td>
    <td><%= Team.find( mission.team).name  %></td>
    <td><%= mission.status %></td>
    <td>
    <p>
    
            <%= link_to I18n.t('target.index.Show this target'), mission , class: "btn btn-primary p-1 py-0" %>
            <%= button_to I18n.t('button.delete'),{ action: "destroy", id: mission.id },
                                method: :delete, data: { confirm: "Are you sure?" } ,
                                class: "btn btn-danger p-1 py-0"%>
    </p>
    </td>
    </tr>
    
  <% end %>
  </tbody>
  </table>
</div>
<br>

<a href='http://localhost:3000/missions/new' class="w3-button w3-white w3-padding-32"><i class="fa fa-diamond w3-margin-right"></i><%= t 'button.newtar' %></a>
<br>
<br>
<a href='http://localhost:3000' class="w3-button w3-white w3-padding-32"><i class="fa fa-diamond w3-margin-right"></i><%= t 'button.back' %></a>
