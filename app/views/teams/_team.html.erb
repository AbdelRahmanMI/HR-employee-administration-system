<div id="<%= dom_id team %>">
  <p>
    <strong style="color : Red"><%= t 'team.index.name' %>:</strong>
    <%= team.name %>
  </p>

  <p>
    <strong><%= t 'team.index.description' %>:</strong>
    <%= team.description %>
  </p>

  <p>
    <strong><%= t 'team.index.members' %>:</strong>
    <%x=2%>
    <%while x<team.members.length%>
      <%= Employee.find(team.members[x].to_i).name %> 
      <% x = x+5%>
      <%if x<team.members.length%>
        -
      <%end%>
    <%end%>
  </p>

  <p>
    <strong><%= t 'team.index.team_lead' %>:</strong>
    <%= Employee.find( team.team_lead).name %>
  </p>

</div>
