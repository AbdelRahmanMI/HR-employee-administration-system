<div id="<%= dom_id employee %>">
  <p>
    <strong style="color : Red">Name:</strong>
    <%= employee.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= employee.email %>
  </p>

  <p>
    <strong>Job:</strong>
    <%= employee.job %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= employee.salary %>
  </p>

  <p>
    <strong>Team Name:</strong>
    <%= Team.find(employee.team_id).name %>
  </p>

  
  <p>
    <strong>Employment status:</strong>
    <%= employee.employment_status %>
  </p>
</div>
