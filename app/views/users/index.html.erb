<div class="container">
    <h1><b><%= t 'users.index.users' %></b></h1>
    <%# <a href='http://localhost:3000/users/new' class="btn btn-primary pull-right"><%= t 'button.newuser'%>
    <a href='http://localhost:3000' class="btn btn-success pull-right"><%= t 'button.back'%></a>
</div>
<br>
<br>
<div class="table-wrapper-scroll-y my-custom-scrollbar" style="height: 525px;overflow: scroll;">
<table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0"
  width="100%">
      <caption>List of users</caption>
      <thead>
        <tr>
        <th><%= t 'users.index.ID'%></th>
        <th><%= t 'users.index.Name'%></th>
        <th><%= t 'users.index.Email'%></th>
        <th><%= t 'users.index.Password'%></th>
        <th><%= t 'users.index.Show Individual'%></th>
        </tr>
      </thead>
      <tbody>
        <% @users = User.all%>
        <% @users.each do |user| %>
          <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td>
          <p>
          
            <%= link_to I18n.t('users.index.Show this user'), user , class: "btn btn-primary p-1 py-0" %>
            <%= button_to I18n.t('button.delete'),{ action: "destroy", id: user.id },
                                method: :delete, data: { confirm: "Are you sure?" } ,
                                class: "btn btn-danger p-1 py-0"%>
          </p>
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

