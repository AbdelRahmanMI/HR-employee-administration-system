<div class="container">
    <h1><b><%= t 'division.index.division' %></b></h1>
    <a href='http://localhost:3000/divisions/new' class="btn btn-primary pull-right"><%= t 'button.newdiv'%></a>
    <a href='http://localhost:3000' class="btn btn-success"><%= t 'button.back'%></a>
</div>
<br>
<div class="table-wrapper-scroll-y my-custom-scrollbar" style="height: 525px;overflow: scroll;">
<table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0"
  width="100%">
      <caption>List of Divisions</caption>
      <thead>
        <tr>
    <th><%= t 'division.index.id' %></th>
    <th><%= t 'division.index.name' %></th>
    <th><%= t 'division.index.description' %></th>
    <th><%= t 'division.index.teams' %></th>
    <th><%= t 'division.index.manager' %></th>
    <th><%= t 'users.index.Show Individual'%></th>
  </tr>

      </thead>
      <tbody>
  <% @divisions = Division.all%>
  <% @divisions.each do |division| %>
    <tr>
    <td><%= division.id %></td>
    <td><%= division.name %></td>
    <td><%= division.description %></td>
    <td>
    <%x=2%>
    <%while x<division.teams.length%>
      <%= Team.find(division.teams[x].to_i).name %> 
      <% x = x+5%>
      <%if x<division.teams.length%>
        -
      <%end%>
    <%end%>
    </td>
    <td><%= Employee.find(division.manager).name %></td>
    <td>
    <p>
      <%= link_to I18n.t('division.index.Show this division'), division , class: "btn btn-primary p-1 py-0" %>
      <%= button_to I18n.t('button.delete'),{ action: "destroy", id: division.id },
                          method: :delete, data: { confirm: "Are you sure?" } ,
                          class: "btn btn-danger p-1 py-0"%>
            
    </p>
    </td>
    </tr>
    
  <% end %>
  </tbody>
  </table>
</div>
<br>
<a href='http://localhost:3000/divisions/new' class="w3-button w3-white w3-padding-32"><i class="fa fa-diamond w3-margin-right"></i><%= t 'button.newdiv'%></a>
<br>
<br>
<a href='http://localhost:3000' class="w3-button w3-white w3-padding-32"><i class="fa fa-diamond w3-margin-right"></i><%= t 'button.back'%></a>
