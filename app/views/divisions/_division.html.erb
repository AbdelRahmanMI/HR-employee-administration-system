
<div id="<%= dom_id division %>">
  <p>
    <strong style="color : Red"><%= t 'division.index.name' %>:</strong>
    <%= division.name %>
  </p>

  <p>
    <strong><%= t 'division.index.description' %>:</strong>
    <%= division.description %>
  </p>

  <p>
    <strong><%= t 'division.index.teams' %>:</strong>
    <%x=2%>
    <%while x<division.teams.length%>
      <%= Team.find(division.teams[x].to_i).name %> 
      <% x = x+5%>
      <%if x<division.teams.length%>
        -
      <%end%>
    <%end%>
  </p>

  <p>
    <strong><%= t 'division.index.manager' %>:</strong>
    <%= Employee.find(division.manager).name%>
  </p>

</div>
